<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.fanfilm" name="FanFilm" version="2025.08.25.0" provider-name="-">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.future"/>
        <import addon="plugin.video.youtube" optional="true"/>
        <import addon="script.module.pyxbmct"/>
        <import addon="script.module.resolveurl"/>
        <import addon="script.fanfilm.media" version="2025.07.25.0"/>
        <import addon="script.module.inputstreamhelper"/>
        <import addon="script.module.myconnpy"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <!-- <extension point="xbmc.python.script" library="script.py" /> -->
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="kodi.context.item">
      <menu id="kodi.core.main">
        <item library="epg.py">
          <label lang="pl">Szukaj w FanFilm</label>
          <visible>String.StartsWith(ListItem.FolderPath,pvr://) + !String.IsEmpty(ListItem.ChannelName)</visible>
        </item>
      </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>true</reuselanguageinvoker>
        <summary lang="pl">FanFilm</summary>
        <description lang="pl">Plugin z filmami i serialami.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>
        </news>
    </extension>
</addon>

