<?xml version="1.0" encoding="UTF-8"?>
<window>
  <controls>
    <control type="image">
      <texture>overlay.png</texture>
    </control>
    <control type="group">
      <control type="list" id="9000">
        <animation effect="slide" end="0,35" time="0" condition="Integer.IsEqual(Container(9000).NumItems,1)">Conditional</animation>
        <centerleft>50%</centerleft>
        <centertop>50%</centertop>
        <width>640</width>
        <height>225</height>
        <orientation>vertical</orientation>
        <itemlayout width="640" height="70">
          <control type="image">
            <colordiffuse>FF1A2123</colordiffuse>
            <texture>white.png</texture>
          </control>
          <control type="label">
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>B3FFFFFF</textcolor>
            <!-- :translate=false: -->
            <label>$INFO[ListItem.Label, ,]</label>
          </control>
        </itemlayout>
        <focusedlayout width="640" height="70">
          <control type="image">
            <texture>white.png</texture>
            <colordiffuse>FF0E597E</colordiffuse>
          </control>
          <control type="label">
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>B3FFFFFF</textcolor>
            <!-- :translate=false: -->
            <label>$INFO[ListItem.Label, [B],[/B]]</label>
          </control>
        </focusedlayout>
      </control>
    </control>
  </controls>
</window>