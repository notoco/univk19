<?xml version="1.0" encoding="UTF-8"?>
<window xmlns:ff="ff">
    <defaultcontrol always="true">5000</defaultcontrol>
    <controls>
        <!-- background black-->
        <control type="image">
            <colordiffuse>B3000000</colordiffuse>
            <texture>white.png</texture>
        </control>

        <!-- dialog group -->
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <left/>
            <top/>
            <width>1680</width>
            <height>940</height>
            <!-- dialog background -->
            <control type="group">
                <control type="image">
                    <height>70</height>
                    <colordiffuse>FF0E597E</colordiffuse>
                    <texture border="10">white.png</texture>
                </control>
                <control type="image">
                    <top>70</top>
                    <colordiffuse>FF1A2123</colordiffuse>
                    <texture border="10">white.png</texture>
                </control>
            </control>
            <control type="label">
                <left>60</left>
                <aligny>center</aligny>
                <height>70</height>
                <label>$ADDON[plugin.video.fanfilm 30105]</label>
            </control>


            <control type="group">
                <top>70</top>
                <left/>
                <!-- colors panel -->
                <control type="panel" id="5000">
                    <top>20</top>
                    <left>20</left>
                    <onright>5050</onright>
                    <width>1365</width>
                    <height>840</height>
                    <orientation>vertical</orientation>
                    <animation effect="slide" end="0,80" time="0" reversible="true" condition="String.IsEqual(Window.Property(current_palette),Simple)">Conditional</animation>
                    <animation effect="slide" end="0,40" time="0" reversible="true" condition="String.IsEqual(Window.Property(current_palette),Rainbow)">Conditional</animation>
                    <itemlayout height="75" width="97" condition="String.IsEqual(Window.Property(current_palette),Simple)">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>93</width>
                            <height>71</height>
                            <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                            <texture>white.png</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="75" width="97" condition="String.IsEqual(Window.Property(current_palette),Simple)">
                        <control type="group">
                            <animation effect="zoom" time="100" tween="sine" easing="inout" start="100" end="120" center="auto">Focus</animation>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <width>97</width>
                                <height>75</height>
                                <texture colordiffuse="FF302F2F">white.png</texture>
                            </control>
                            <control type="image">
                                <left>2</left>
                                <top>2</top>
                                <width>93</width>
                                <height>71</height>
                                <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                                <texture>white.png</texture>
                            </control>
                        </control>
                    </focusedlayout>
                    <itemlayout height="44" width="97" condition="String.IsEqual(Window.Property(current_palette),Material Design)">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>93</width>
                            <height>40</height>
                            <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                            <texture>white.png</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="44" width="97" condition="String.IsEqual(Window.Property(current_palette),Material Design)">
                        <control type="group">
                            <animation effect="zoom" time="100" tween="sine" easing="inout" start="100" end="120" center="auto">Focus</animation>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <width>97</width>
                                <height>44</height>
                                <texture colordiffuse="FF302F2F">white.png</texture>
                            </control>
                            <control type="image">
                                <left>2</left>
                                <top>2</top>
                                <width>93</width>
                                <height>40</height>
                                <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                                <texture>white.png</texture>
                            </control>
                        </control>
                    </focusedlayout>
                    <itemlayout height="44" width="44" condition="String.IsEqual(Window.Property(current_palette),Web) | String.IsEqual(Window.Property(current_palette),Rainbow)">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>40</width>
                            <height>40</height>
                            <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                            <texture>white.png</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="44" width="44" condition="String.IsEqual(Window.Property(current_palette),Web) | String.IsEqual(Window.Property(current_palette),Rainbow)">
                        <control type="group">
                            <animation effect="zoom" time="100" tween="sine" easing="inout" start="100" end="140" center="auto">Focus</animation>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <width>44</width>
                                <height>44</height>
                                <texture colordiffuse="FF302F2F">white.png</texture>
                            </control>
                            <control type="image">
                                <left>2</left>
                                <top>2</top>
                                <width>40</width>
                                <height>40</height>
                                <colordiffuse>$INFO[ListItem.Property(color)]</colordiffuse>
                                <texture>white.png</texture>
                            </control>
                        </control>
                    </focusedlayout>
                </control>

                <!-- buttons area -->
                <control type="grouplist" id="5050">
                    <top>60</top>
                    <right>0</right>
                    <left/>
                    <width>300</width>
                    <height>870</height>
                    <orientation>vertical</orientation>
                    <itemgap>20</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="label">
                        <height>30</height>
                        <align>center</align>
                        <textcolor>B3FFFFFF</textcolor>
                        <font ff:style="normal">font13</font>
                        <label>$ADDON[plugin.video.fanfilm 30106]</label>
                    </control>
                    <control type="label">
                        <height>30</height>
                        <align>center</align>
                        <textcolor>B3FFFFFF</textcolor>
                        <font ff:style="normal">font13</font>
                        <!-- :translate=false: -->
                        <label>$INFO[Window.Property(current_choice),[B],[/B]]</label>
                    </control>
                    <control type="image">
                        <width>240</width>
                        <height>70</height>
                        <left>30</left>
                        <colordiffuse>$INFO[Window.Property(current_choice)]</colordiffuse>
                        <texture border="10">white.png</texture>
                    </control>
                    <control type="label">
                        <height>30</height>
                        <align>center</align>
                        <textcolor>B3FFFFFF</textcolor>
                        <font ff:style="normal">font13</font>
                        <label>$ADDON[plugin.video.fanfilm 30107]</label>
                    </control>
                    <control type="label">
                        <height>70</height>
                        <align>center</align>
                        <textcolor>B3FFFFFF</textcolor>
                        <font ff:style="normal">font13</font>
                        <!-- :translate=false: -->
                        <label>$INFO[Window.Property(current_palette),[B],[/B]]</label>
                    </control>

                    <control type="grouplist">
                        <left>30</left>
                        <height>700</height>
                        <itemgap>30</itemgap>
                        <orientation>vertical</orientation>
                        <usecontrolcoords>true</usecontrolcoords>
                        <control type="grouplist" id="7000">
                            <left>15</left>
                            <onleft>5000</onleft>
                            <height>100</height>
                            <itemgap>10</itemgap>
                            <orientation>horizontal</orientation>
                            <control type="button" id="6001">
                                <onleft>5000</onleft>
                                <align>center</align>
                                <aligny>center</aligny>
                                <textcolor>B3FFFFFF</textcolor>
                                <focusedcolor>ffffffff</focusedcolor>
                                <!-- :translate=false: -->
                                <label>&lt;</label>
                                <width>100</width>
                                <height>70</height>
                                <ondown>6003</ondown>
                                <texturefocus>dialogs/button-focus.png</texturefocus>
                                <texturenofocus>dialogs/button-nofocus.png</texturenofocus>
                                <textwidth>80</textwidth>
                                <colordiffuse/>
                            </control>
                            <control type="button" id="6002">
                                <onleft>5000</onleft>
                                <align>center</align>
                                <aligny>center</aligny>
                                <textcolor>B3FFFFFF</textcolor>
                                <focusedcolor>ffffffff</focusedcolor>
                                <!-- :translate=false: -->
                                <label>&gt;</label>
                                <width>100</width>
                                <height>70</height>
                                <ondown>6003</ondown>
                                <texturefocus>dialogs/button-focus.png</texturefocus>
                                <texturenofocus>dialogs/button-nofocus.png</texturenofocus>
                                <textwidth>80</textwidth>
                                <colordiffuse/>
                            </control>
                        </control>
                        <control type="button" id="6003">
                            <onleft>5000</onleft>
                            <align>center</align>
                            <aligny>center</aligny>
                            <focusedcolor>ffffffff</focusedcolor>
                            <font ff:style="normal">font13</font>
                            <label>$ADDON[plugin.video.fanfilm 30108]</label>
                            <width>240</width>
                            <height>70</height>
                            <texturefocus>dialogs/button-focus.png</texturefocus>
                            <texturenofocus>dialogs/button-nofocus.png</texturenofocus>
                            <textwidth>220</textwidth>
                            <colordiffuse/>
                        </control>
                        <control type="button" id="6004">
                            <onleft>5000</onleft>
                            <align>center</align>
                            <aligny>center</aligny>
                            <focusedcolor>ffffffff</focusedcolor>
                            <font ff:style="normal">font13</font>
                            <label>$ADDON[plugin.video.fanfilm 30109]</label>
                            <width>240</width>
                            <height>70</height>
                            <texturefocus>dialogs/button-focus.png</texturefocus>
                            <texturenofocus>dialogs/button-nofocus.png</texturenofocus>
                            <textwidth>220</textwidth>
                            <colordiffuse/>
                        </control>
                        <control type="button" id="6005">
                            <onleft>5000</onleft>
                            <align>center</align>
                            <aligny>center</aligny>
                            <focusedcolor>ffffffff</focusedcolor>
                            <font ff:style="normal">font13</font>
                            <label>$ADDON[plugin.video.fanfilm 30110]</label>
                            <width>240</width>
                            <height>70</height>
                            <texturefocus>dialogs/button-focus.png</texturefocus>
                            <texturenofocus>dialogs/button-nofocus.png</texturenofocus>
                            <textwidth>220</textwidth>
                            <colordiffuse/>
                            <onclick>Close</onclick>
                        </control>
                    </control>
                </control>
            </control>
        </control>

    </controls>
</window>