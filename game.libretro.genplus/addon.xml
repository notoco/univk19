<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.genplus" name="Sega - MS/GG/MD/CD (Genesis Plus GX)" version="9.7.4.27.1" provider-name="Charles McDonald, Eke-Eke">
  <requires>
    <import addon="game.libretro" version="1.0.0"/>
    <import addon="game.controller.genesis.6button" version="1.0.0"/>
    <import addon="game.controller.genesis.mouse" version="1.0.0"/>
    <import addon="resource.games.libretro.restricted" version="1.0.0" optional="true"/>
  </requires>
  <extension point="kodi.gameclient" library_linux="game.libretro.genplus.so">
    <platforms>Genesis|Game Gear|SEGA Master System</platforms>
    <extensions>m3u|mdx|md|smd|gen|bin|iso|chd|bms|sms|gg|sg|68k|sgd</extensions>
    <supports_vfs>false</supports_vfs>
    <supports_standalone>false</supports_standalone>
    <requires_opengl>false</requires_opengl>
  </extension>
  <extension point="xbmc.addon.metadata">
    <license>Non-commercial</license>
    <platform/>
    <source>https://github.com/kodi-game/game.libretro.genplus</source>
    <assets>
      <icon>resources/icon.png</icon>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
    <summary lang="en_GB">Sega - MS/GG/MD/CD (Genesis Plus GX) v1.7.4</summary>
    <description lang="en_GB">Genesis Plus GX is an enhanced port of Genesis Plus to the libretro API.[CR][CR]Features support for SG-1000, Mark-III, Master System, Game Gear, Mega Drive and Mega CD hardware.</description>
    <disclaimer lang="en_GB">Special thanks to twinaphex for backporting enhancements from the GX version</disclaimer>
  </extension>
</addon>
