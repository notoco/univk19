<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.restartdialog"
       name="Restart Dialog"
       version="1.0.0"
       provider-name="ChatGPT"
       extension="xbmc.python.script"
       library="default.py">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.addon.metadata">
        <summary>Restart Kodi z odliczaniem</summary>
        <description>Wyświetla okno z 30-sekundowym odliczaniem. Jeśli użytkownik nie kliknie "Przerwij", Kodi zostanie zrestartowane.</description>
        <platform>all</platform>
    </extension>
</addon>
