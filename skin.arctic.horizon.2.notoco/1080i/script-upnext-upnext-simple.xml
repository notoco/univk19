<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <include>Animation_FadeIn</include>
    <controls>

        <control type="image">
            <height>80</height>                
            <width>700</width>
            <centerleft>50%</centerleft>
            <texture colordiffuse="dialog_bg_100" border="20">common/dialog2.png</texture>
        </control>
        <control type="group">
                <top>100</top>
                <height>80</height>
                <width>700</width>
                <centerleft>50%</centerleft>
                <control type="progress" id="3014">
                    <top>-60</top>
                    <left>170</left>
                    <right>80</right>
                    <height>8</height>
                </control>
                <control type="label">
                    <top>-40</top>
                    <left>170</left>
                    <aligny>center</aligny>
                    <height>40</height>
                    <label>[COLOR=panel_fg_100]$LOCALIZE[31129] [/COLOR]$INFO[Window.Property(remaining)][COLOR=panel_fg_100] [LOWERCASE]$LOCALIZE[31130][/LOWERCASE]...[/COLOR]</label>
                    <textcolor>$VAR[ColorHighlight]</textcolor>
                    <font>font_mini_black</font>
                </control>
            <control type="grouplist">
                    <height>80</height>
                    <top>-60</top>
                    <orientation>horizontal</orientation>
                    <itemgap>30</itemgap>
                    <left>0</left>
                    <include content="OSD_Button">
                        <param name="icon" value="special://skin/extras/icons/play2.png" />
                        <param name="visible" value="true" />
                        <param name="id" value="3012" />
                        <param name="groupid" value="5012" />
                        <param name="size" value="60" />

                    </include>
                    <include content="OSD_Button">
                        <param name="icon" value="special://skin/extras/icons/xmark.png" />
                        <param name="visible" value="true" />
                        <param name="id" value="4013" />
                        <param name="groupid" value="5013" />
                        <param name="size" value="60" />

                        <onclick>SetFocus(3013)</onclick>
                        <onclick>Action(Select)</onclick>
                    </include>
                </control>
        </control>
        <include content="Object_Hidden_Button">
            <param name="id" value="3013" />
        </include>
    </controls>
</window>
