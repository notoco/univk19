<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
            <include>Dimension_ClockShadow</include>
            <visible>!Window.IsVisible(DialogVolumeBar.xml) | Player.Muted</visible>
            <visible>VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)</visible>
            <visible>!Window.IsVisible(DialogSeekBar.xml)</visible>
            
            <visible>!Window.IsVisible(DialogVolumeBar.xml) | Player.Muted</visible>
            <include content="Furniture_Gutters">
                <top>20</top>
                <height>70</height>
                <control type="image">
                    <height>100</height>
                    <texture>common/dim-overlay.png</texture>
                </control>
                <control type="group">
                    <width>60</width>
                    <height>60</height>
                    <right>20</right>
                    <control type="group">
                        <visible>String.StartsWith(Control.GetLabel(400),Default)</visible>
                        <include content="Object_MenuButton">
                            <param name="icon" value="dialog/info.png" />
                            <param name="bordersize" value="10" />
                        </include>
                    </control>
                    <control type="group">
                        <top>20</top>
                        <visible>!String.StartsWith(Control.GetLabel(400),Default)</visible>
                        <include content="Object_MenuButton">
                            <param name="icon" value="special://skin/extras/icons/_none.png" />
                        </include>
                        <control type="image">
                            <width>40</width>
                            <height>40</height>
                            <centertop>70%</centertop>
                            <centerleft>50%</centerleft>
                            <texture diffuse="common/circle.png">$INFO[Control.GetLabel(400)]</texture>
                        </control>
                    </control>
                </control>
                <control type="group">
                    <right>100</right>
                    <control type="label" id="401">
                        <align>right</align>
                        <height>50%</height>
                        <top>10</top>
                        <font>font_main_black</font>
                        <textcolor>main_fg_100</textcolor>
                    </control>
                    <control type="label" id="402">
                        <align>right</align>
                        <height>50%</height>
                        <bottom>-20</bottom>
                        <font>font_mini</font>
                        <textcolor>main_fg_100</textcolor>
                    </control>
                </control>
            </include>
        <control type="image" id="400">
            <visible>false</visible>
            <height>1</height>
            <width>1</width>
        </control>
    </controls>
</window>
